.PHONY: all
all: clean build-node build-keyforge build-manager

.PHONY: test
test:
	@echo "\nðŸ§ª Testing...\n"
	go clean -testcache
	go test ./...
	@echo "\nâœ… Done.\n"

.PHONY: build-node
build-node:
	@echo "\nðŸ›  Building node...\n"
	cd cmd/node && go build -o ../../dist/b7s
	@echo "\nâœ… Done.\n"

.PHONY: build-keyforge
build-keyforge:
	@echo "\nðŸ›  Building node keygen...\n"
	cd cmd/keyforge && go build -o ../../dist/b7s-keyforge
	@echo "\nâœ… Done.\n"

.PHONY: build-manager
build-manager:
	@echo "\nðŸ›  Building node manager...\n"
	cd cmd/manager && go build -o ../../dist/b7s-manager
	@echo "\nâœ… Done.\n"


.PHONY: clean
clean:
	@echo "\nðŸ§¹ Cleaning...\n"
	rm -rf dist
	@echo "\nâœ… Done.\n"

.PHONY: setup
setup:
	@echo "\nðŸ“¥ Downloading and extracting runtime...\n"
	mkdir -p /tmp/runtime
	wget -O /tmp/bls-runtime.tar.gz https://github.com/blessnetwork/bls-runtime/releases/download/v0.3.4/blockless-runtime.darwin-latest.x86_64.tar.gz
	tar -xzf /tmp/bls-runtime.tar.gz -C /tmp/runtime
	@echo "\nâœ… Done.\n"
